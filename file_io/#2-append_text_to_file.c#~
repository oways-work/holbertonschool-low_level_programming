#include "main.h" /** * append_text_to_file - Appends text at the end of a file. * @filename: The name of the file to append to. * @text_content: The NULL-terminated string to add to the file. * * Return: 1 on success, -1 on failure. */ int append_text_to_file(const char *filename, char *text_content) { int fd; int len = 0; ssize_t bytes_written; if (filename == NULL) return (-1); /* Open the file in write-only mode and append to the end */ /* This will fail if the file does not exist, as required */ fd = open(filename, O_WRONLY | O_APPEND); if (fd == -1) return (-1); /* If text_content is NULL, success is determined by file existence */ if (text_content == NULL) { close(fd); return (1); } /* Calculate the length of the string to append */ while (text_content[len]) len++; /* Write the content to the end of the file */ bytes_written = write(fd, text_content, len); close(fd); if (bytes_written == -1) return (-1); return (1); }